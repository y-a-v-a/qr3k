{
  "name": "qr3k",
  "version": "1.0.0",
  "description": "A challenge to create complete games that fit entirely within a QR code's data capacity",
  "main": "src/runtime/index.php",
  "scripts": {
    "test": "node test/xor.test.js",
    "encode": "node src/tools/encode.js",
    "dev": "docker-compose up --build",
    "dev:detached": "docker-compose up -d --build",
    "stop": "docker-compose down",
    "logs": "docker-compose logs -f qr3k",
    "shell": "docker-compose exec qr3k /bin/bash",
    "build": "docker build -t qr3k:latest .",
    "build:prod": "docker build -t qr3k:production --target production .",
    "deploy": "docker save qr3k:production | gzip > qr3k-production.tar.gz",
    "clean": "docker-compose down --volumes --rmi all"
  },
  "keywords": [
    "qr-code",
    "game-development",
    "js1k",
    "demoscene",
    "constraint-programming",
    "xor-encoding",
    "canvas-games"
  ],
  "author": "Vincent Bruijn",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/qr3k.git"
  },
  "engines": {
    "node": ">=14.0.0",
    "php": ">=7.4.0"
  },
  "devDependencies": {},
  "dependencies": {}
}